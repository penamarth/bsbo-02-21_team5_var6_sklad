{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "experimentalDecorators": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["es2016", "dom"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  